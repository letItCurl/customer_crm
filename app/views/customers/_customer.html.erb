<div id="<%= dom_id customer %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= customer.name %>
  </p>
  <% if action_name != "show" %>
    <%= link_to "Show this customer", customer, class: "bg-blue-600 text-white rounded-lg py-3 px-5 inline-block font-medium" %>
    <%= link_to "Edit this customer", edit_customer_path(customer), class: "bg-blue-600 text-white rounded-lg py-3 ml-2 px-5 inline-block font-medium" %>
    <%= link_to "Add notes", new_customer_note_path(customer), class: "bg-blue-600 text-white rounded-lg py-3 ml-2 px-5 inline-block font-medium" %>
    <%= link_to "Show notes", [customer, :notes], class: "bg-blue-600 text-white rounded-lg py-3 ml-2 px-5 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
